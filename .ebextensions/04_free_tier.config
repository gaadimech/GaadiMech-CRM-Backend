# Free Tier Configuration for AWS Elastic Beanstalk
# This configures the environment for minimal cost (free tier eligible)

option_settings:
  # Use t2.micro instance (free tier eligible for first 12 months)
  aws:autoscaling:launchconfiguration:
    InstanceType: t2.micro
    IamInstanceProfile: aws-elasticbeanstalk-ec2-role
  
  # Single instance mode (no load balancer) to minimize costs
  aws:elasticbeanstalk:environment:
    EnvironmentType: SingleInstance
    ServiceRole: aws-elasticbeanstalk-service-role
  
  # Auto-scaling settings (disabled for single instance)
  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 1
  
  # Health reporting (basic for single instance)
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: basic
  
  # CloudWatch logs (minimal to reduce costs)
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 3


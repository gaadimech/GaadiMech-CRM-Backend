# Environment Variables Configuration
# Note: Sensitive values (RDS_PASSWORD, SECRET_KEY) should be set via AWS Console
# or AWS CLI for security. This file documents required variables.

option_settings:
  aws:elasticbeanstalk:application:environment:
    # Flask Environment
    FLASK_ENV: production
    PYTHONUNBUFFERED: 1
    
    # Database Configuration (set these via AWS Console or CLI)
    # RDS_HOST: your-rds-endpoint.region.rds.amazonaws.com
    # RDS_DB: your_database_name
    # RDS_USER: your_database_user
    # RDS_PASSWORD: your_database_password (set via console for security)
    # RDS_PORT: 5432
    
    # Security
    # SECRET_KEY: your-secret-key-here (set via console for security)
    
    # CORS (update after frontend deployment)
    # EB_ORIGIN: https://your-frontend.railway.app
    
    # Optional: Scheduler
    ENABLE_SCHEDULER: 'true'
    
    # Optional: HTTPS
    FORCE_HTTPS: 'false'
    USE_SECURE_COOKIES: 'false'

